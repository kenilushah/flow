import React, { useState, useEffect, useRef, useMemo } from 'react';
import { 
  Package, 
  Scissors, 
  Shirt, 
  CheckCircle, 
  Truck, 
  Plus, 
  Search, 
  QrCode, 
  Camera, 
  Save, 
  X, 
  ArrowRight,
  LayoutDashboard,
  DollarSign,
  Calendar,
  User,
  Phone,
  Image as ImageIcon,
  ScanBarcode,
  Printer,
  Edit2,
  FileText,
  Filter
} from 'lucide-react';
import { initializeApp } from 'firebase/app';
import { 
  getAuth, 
  signInAnonymously, 
  onAuthStateChanged,
  signInWithCustomToken 
} from 'firebase/auth';
import { 
  getFirestore, 
  collection, 
  addDoc, 
  updateDoc, 
  doc, 
  onSnapshot, 
  serverTimestamp, 
  query, 
  orderBy,
  setLogLevel
} from 'firebase/firestore';

// --- Environment Variable Configuration & Initialization ---
const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : 'null');
const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-anadhya-flow';

let app, auth, db;

if (firebaseConfig) {
  try {
    setLogLevel('debug'); // Enable debug logging for firestore
    app = initializeApp(firebaseConfig);
    auth = getAuth(app);
    db = getFirestore(app);
    console.log("Firebase initialized successfully.");
  } catch (error) {
    console.error("Firebase Initialization Failed:", error);
  }
} else {
  console.error("Firebase configuration is missing. The application cannot connect to Firestore.");
}

// --- Constants ---
const STAGES = [
  'Order Received',
  'Pattern Cutting',
  'Stitching',
  'Embroidery/Work',
  'Trial Ready',
  'Alterations',
  'Ready for Delivery',
  'Delivered'
];

const STAGE_COLORS = {
  'Order Received': 'bg-gray-100 text-gray-800 border-gray-200',
  'Pattern Cutting': 'bg-blue-100 text-blue-800 border-blue-200',
  'Stitching': 'bg-indigo-100 text-indigo-800 border-indigo-200',
  'Embroidery/Work': 'bg-purple-100 text-purple-800 border-purple-200',
  'Trial Ready': 'bg-yellow-100 text-yellow-800 border-yellow-200',
  'Alterations': 'bg-orange-100 text-orange-800 border-orange-200',
  'Ready for Delivery': 'bg-green-100 text-green-800 border-green-200',
  'Delivered': 'bg-emerald-100 text-emerald-800 border-emerald-200',
};

// --- Helper Components ---

const Barcode = ({ value }) => {
  const canvasRef = useRef(null);

  useEffect(() => {
    // Check if the JsBarcode library is loaded before trying to use it
    if (window.JsBarcode && canvasRef.current && value) {
      try {
        window.JsBarcode(canvasRef.current, value, {
          format: "CODE128",
          lineColor: "#000",
          width: 2,
          height: 50,
          displayValue: true,
          fontSize: 14,
          margin: 10
        });
      } catch (e) {
        console.error("JsBarcode rendering failed:", e);
      }
    }
  }, [value]);

  return <canvas ref={canvasRef} className="max-w-full" />;
};

const Modal = ({ isOpen, onClose, title, children }) => {
  if (!isOpen) return null;
  return (
    <div className="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 p-4 animate-in fade-in duration-200">
      <div className="bg-white rounded-xl shadow-2xl w-full max-w-2xl max-h-[90vh] overflow-y-auto">
        <div className="flex justify-between items-center p-6 border-b sticky top-0 bg-white z-10">
          <h2 className="text-xl font-bold text-gray-900">{title}</h2>
          <button onClick={onClose} className="p-2 hover:bg-gray-100 rounded-full">
            <X size={20} />
          </button>
        </div>
        <div className="p-6">
          {children}
        </div>
      </div>
    </div>
  );
};

// --- Main Application Component ---

function OrderTrackerApp() {
  const [user, setUser] = useState(null);
  const [orders, setOrders] = useState([]);
  const [loading, setLoading] = useState(true);
  const [view, setView] = useState('dashboard'); // dashboard, orders, scan
  const [isModalOpen, setIsModalOpen] = useState(false);
  const [scannedId, setScannedId] = useState('');
  const [selectedOrder, setSelectedOrder] = useState(null);
  const [sortType, setSortType] = useState('newest'); // newest, delivery, trial
  const [showCamera, setShowCamera] = useState(false);
  const [isAuthReady, setIsAuthReady] = useState(false);
  
  // Editing State
  const [isEditing, setIsEditing] = useState(false);
  const [editFormData, setEditFormData] = useState({});

  const scannerRef = useRef(null);
  
  // Create Form State
  const [formData, setFormData] = useState({
    customerName: '',
    customerPhone: '',
    deliveryDate: '',
    trialDate: '',
    totalAmount: '',
    amountReceived: '',
    photo: null, // Base64 string
    notes: '' // Remarks
  });

  // Load External Scripts (JsBarcode + Html5Qrcode)
  useEffect(() => {
    const loadScript = (src) => {
      const script = document.createElement('script');
      script.src = src;
      script.async = true;
      document.body.appendChild(script);
      return script;
    };

    const jsBarcodeScript = loadScript("https://cdn.jsdelivr.net/npm/jsbarcode@3.11.0/dist/JsBarcode.all.min.js");
    const qrScript = loadScript("https://unpkg.com/html5-qrcode");
    
    return () => {
      if(document.body.contains(jsBarcodeScript)) document.body.removeChild(jsBarcodeScript);
      if(document.body.contains(qrScript)) document.body.removeChild(qrScript);
    };
  }, []);

  // Auth Initialization and Listener
  useEffect(() => {
    if (!auth) {
        setIsAuthReady(true); // Treat as ready but failed if no auth instance
        setLoading(false);
        return; 
    }

    const initAuth = async () => {
      try {
        if (initialAuthToken) {
            await signInWithCustomToken(auth, initialAuthToken);
        } else {
            await signInAnonymously(auth);
        }
      } catch (error) {
        console.error("Authentication failed:", error);
      }
    };
    initAuth();

    const unsubscribe = onAuthStateChanged(auth, (currentUser) => {
        setUser(currentUser);
        setIsAuthReady(true);
    });

    return () => unsubscribe();
  }, []);

  // Data Fetching
  useEffect(() => {
    if (!isAuthReady || !db) return;
    
    // Path to the public orders collection (shared data)
    // /artifacts/{appId}/public/data/orders
    const q = collection(db, 'artifacts', appId, 'public', 'data', 'orders');
    
    const unsubscribe = onSnapshot(q, (snapshot) => {
      const ordersData = snapshot.docs.map(doc => ({
        id: doc.id,
        ...doc.data()
      }));
      setOrders(ordersData);
      setLoading(false);
    }, (error) => {
      console.error("Firestore error:", error);
      setLoading(false);
    });

    return () => unsubscribe();
  }, [isAuthReady]); // Re-run when auth state is confirmed

  // Derived Statistics
  const stats = useMemo(() => {
    const counts = {};
    STAGES.forEach(stage => counts[stage] = 0);
    orders.forEach(order => {
      if (counts[order.status] !== undefined) {
        counts[order.status]++;
      }
    });
    return counts;
  }, [orders]);

  // Sorting Logic
  const sortedOrders = useMemo(() => {
    let sorted = [...orders];
    switch(sortType) {
      case 'delivery':
        sorted.sort((a, b) => new Date(a.deliveryDate) - new Date(b.deliveryDate));
        break;
      case 'trial':
        sorted.sort((a, b) => new Date(a.trialDate) - new Date(b.trialDate));
        break;
      case 'newest':
      default:
        // Client-side sort by createdAt (if available)
        sorted.sort((a, b) => (b.createdAt?.seconds || 0) - (a.createdAt?.seconds || 0));
        break;
    }
    return sorted;
  }, [orders, sortType]);

  // --- Handlers ---

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  const handleEditChange = (e) => {
    const { name, value } = e.target;
    setEditFormData(prev => ({ ...prev, [name]: value }));
  };

  const handleFileChange = (e) => {
    const file = e.target.files[0];
    if (file) {
      // Simple size check (500KB limit)
      if (file.size > 500000) { 
        console.error("File too large. Please choose an image under 500KB.");
        // Should show a visual message instead of console error in production
        return;
      }
      const reader = new FileReader();
      reader.onloadend = () => {
        setFormData(prev => ({ ...prev, photo: reader.result }));
      };
      reader.readAsDataURL(file);
    }
  };

  const handleSubmitOrder = async (e) => {
    e.preventDefault();
    if (!user || !db) {
      console.error("Cannot submit order: User not authenticated or DB not initialized.");
      return;
    }

    // Auto-generate a simple 4-digit Design/Order Number
    const autoDesignNumber = `${Math.floor(1000 + Math.random() * 9000)}`;

    try {
      await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'orders'), {
        ...formData,
        designNumber: autoDesignNumber,
        totalAmount: Number(formData.totalAmount || 0),
        amountReceived: Number(formData.amountReceived || 0),
        status: 'Order Received',
        createdAt: serverTimestamp()
      });
      setIsModalOpen(false);
      // Reset form data after successful submission
      setFormData({
        customerName: '',
        customerPhone: '',
        deliveryDate: '',
        trialDate: '',
        totalAmount: '',
        amountReceived: '',
        photo: null,
        notes: ''
      });
    } catch (err) {
      console.error("Error creating order:", err);
    }
  };

  const updateStatus = async (orderId, newStatus) => {
    if (!db) return;
    try {
      await updateDoc(doc(db, 'artifacts', appId, 'public', 'data', 'orders', orderId), {
        status: newStatus
      });
      // Update the local state for the currently viewed order
      if (selectedOrder && selectedOrder.id === orderId) {
        setSelectedOrder(prev => ({...prev, status: newStatus}));
      }
    } catch (err) {
      console.error("Error updating status:", err);
    }
  };

  const saveOrderEdits = async () => {
    if (!selectedOrder || !user || !db) return;
    try {
      await updateDoc(doc(db, 'artifacts', appId, 'public', 'data', 'orders', selectedOrder.id), {
        ...editFormData,
        totalAmount: Number(editFormData.totalAmount || 0),
        amountReceived: Number(editFormData.amountReceived || 0)
      });
      
      // Update local view immediately
      setSelectedOrder(prev => ({
         ...prev, 
         ...editFormData,
         totalAmount: Number(editFormData.totalAmount || 0),
         amountReceived: Number(editFormData.amountReceived || 0)
      }));
      setIsEditing(false);
    } catch (err) {
      console.error("Error updating order:", err);
    }
  };

  const startEditing = () => {
    // Populate the edit form with current order data
    setEditFormData({
      customerName: selectedOrder.customerName,
      customerPhone: selectedOrder.customerPhone,
      deliveryDate: selectedOrder.deliveryDate,
      trialDate: selectedOrder.trialDate,
      totalAmount: selectedOrder.totalAmount || '',
      amountReceived: selectedOrder.amountReceived || '',
      notes: selectedOrder.notes || ''
    });
    setIsEditing(true);
  };

  const findAndSelectOrder = (text) => {
    // Search by Design Number (Barcode) OR Document ID
    const searchTerm = String(text).toLowerCase().trim();
    const order = orders.find(o => 
      (o.designNumber && String(o.designNumber).toLowerCase() === searchTerm) ||
      (o.id.toLowerCase() === searchTerm) 
    );

    if (order) {
      setSelectedOrder(order);
      setIsEditing(false); // Reset edit mode when opening new order
      setScannedId('');
      return true;
    } else {
      console.warn(`Order with ID "${text}" not found. Try scanning again.`);
      return false;
    }
  };

  const handleManualScan = (e) => {
    e.preventDefault();
    if (scannedId.trim()) {
        findAndSelectOrder(scannedId);
    }
  };

  // --- Camera Scanner Logic ---
  const toggleCamera = () => {
    if (!window.Html5QrcodeScanner) {
      console.error("Scanner library (html5-qrcode) not loaded yet. Please wait a moment.");
      return;
    }

    if (showCamera) {
      // Stop camera if already running
      if (scannerRef.current) {
        scannerRef.current.clear().then(() => {
          setShowCamera(false);
          scannerRef.current = null;
        }).catch(err => console.error("Failed to clear scanner", err));
      } else {
        setShowCamera(false);
      }
    } else {
      setShowCamera(true);
      setTimeout(() => {
        try {
          // Initialize the scanner
          const scanner = new window.Html5QrcodeScanner(
            "reader", // ID of the div container
            { fps: 10, qrbox: 250, aspect: 1.0 },
            false // Disable scanner startup screen
          );
          
          scanner.render((decodedText) => {
            // Success callback: order found
            const found = findAndSelectOrder(decodedText);
            if (found) {
              scanner.clear();
              setShowCamera(false);
              scannerRef.current = null;
            }
          }, (errorMessage) => {
            // Error callback: usually ignored for continuous scanning
            // console.log("Scan error:", errorMessage);
          });
          
          scannerRef.current = scanner;
        } catch (e) {
          console.error("Error initializing scanner:", e);
          setShowCamera(false);
        }
      }, 100);
    }
  };

  // --- Render Functions ---

  const renderDashboard = () => (
    <div className="grid grid-cols-2 md:grid-cols-4 gap-4 animate-in fade-in">
      {STAGES.map((stage) => (
        <div 
          key={stage}
          className={`${STAGE_COLORS[stage]} border rounded-xl p-4 shadow-sm flex flex-col justify-between h-32 transition-transform hover:scale-105 cursor-pointer`}
        >
          <div className="flex justify-between items-start">
            <h3 className="font-semibold text-sm opacity-80 uppercase tracking-wide">{stage}</h3>
            {getStageIcon(stage)}
          </div>
          <p className="text-4xl font-bold">{stats[stage]}</p>
        </div>
      ))}
    </div>
  );

  const getStageIcon = (stage) => {
    switch (stage) {
      case 'Order Received': return <Package size={20} />;
      case 'Pattern Cutting': return <Scissors size={20} />;
      case 'Stitching': return <ScanBarcode size={20} />;
      case 'Delivered': return <CheckCircle size={20} />;
      default: return <Shirt size={20} />;
    }
  };

  const renderOrderList = () => (
    <div className="space-y-4">
      <div className="flex justify-end items-center gap-2">
         <span className="text-sm text-gray-500 font-medium flex items-center gap-1">
           <Filter size={16} /> Sort by:
         </span>
         <select 
          value={sortType}
          onChange={(e) => setSortType(e.target.value)}
          className="bg-white border rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 outline-none"
         >
           <option value="newest">Newest First</option>
           <option value="delivery">Delivery Date (Soonest)</option>
           <option value="trial">Trial Date (Soonest)</option>
         </select>
      </div>

      <div className="bg-white rounded-xl shadow-sm border overflow-hidden">
        <div className="overflow-x-auto">
          <table className="w-full text-left border-collapse">
            <thead className="bg-gray-50 text-gray-600 uppercase text-xs font-semibold">
              <tr>
                <th className="p-4">Order #</th>
                <th className="p-4">Customer</th>
                <th className="p-4 whitespace-nowrap">Trial Date</th>
                <th className="p-4 whitespace-nowrap">Delivery Date</th>
                <th className="p-4">Status</th>
                <th className="p-4 text-right">Balance</th>
                <th className="p-4 text-center">Action</th>
              </tr>
            </thead>
            <tbody className="divide-y divide-gray-100">
              {sortedOrders.map(order => {
                const balance = Number(order.totalAmount || 0) - Number(order.amountReceived || 0);
                return (
                  <tr key={order.id} className="hover:bg-gray-50 transition-colors">
                    <td className="p-4 font-medium">#{order.designNumber}</td>
                    <td className="p-4">
                      <div className="font-semibold text-gray-900">{order.customerName}</div>
                      <div className="text-xs text-gray-500">{order.customerPhone}</div>
                    </td>
                    <td className="p-4 text-sm text-gray-600 font-medium">
                      {order.trialDate ? new Date(order.trialDate).toLocaleDateString() : '-'}
                    </td>
                    <td className="p-4 text-sm text-gray-600 font-medium">
                       {order.deliveryDate ? new Date(order.deliveryDate).toLocaleDateString() : '-'}
                    </td>
                    <td className="p-4">
                      <span className={`px-2 py-1 rounded-full text-xs font-medium border ${STAGE_COLORS[order.status] || 'bg-gray-100 text-gray-800'}`}>
                        {order.status}
                      </span>
                    </td>
                    <td className="p-4 text-right font-medium">
                      <span className={balance > 0 ? "text-red-600" : "text-green-600"}>
                        ${balance.toFixed(2)}
                      </span>
                    </td>
                    <td className="p-4 text-center">
                      <button 
                        onClick={() => {
                          setSelectedOrder(order);
                          setIsEditing(false);
                        }}
                        className="text-blue-600 hover:bg-blue-50 p-2 rounded-lg"
                      >
                        View
                      </button>
                    </td>
                  </tr>
                );
              })}
              {orders.length === 0 && (
                <tr>
                  <td colSpan="7" className="p-8 text-center text-gray-400">
                    No orders found. Create one to get started!
                  </td>
                </tr>
              )}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  );

  const renderScanner = () => (
    <div className="max-w-xl mx-auto space-y-8 animate-in slide-in-from-bottom-4">
      <div className="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 text-center">
        <div className="bg-blue-50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6">
          <ScanBarcode size={40} className="text-blue-600" />
        </div>
        <h2 className="text-2xl font-bold text-gray-900 mb-2">Scan Order</h2>
        <p className="text-gray-500 mb-6">Scan the barcode on the tag to update status or edit details.</p>
        
        {/* Camera Toggle */}
        <button 
          onClick={toggleCamera}
          className={`mb-6 flex items-center justify-center gap-2 mx-auto px-6 py-2 rounded-full font-medium transition-all ${
            showCamera ? 'bg-red-100 text-red-600 hover:bg-red-200' : 'bg-blue-100 text-blue-600 hover:bg-blue-200'
          }`}
        >
          <Camera size={20} />
          {showCamera ? 'Stop Camera' : 'Use Camera'}
        </button>

        {showCamera && (
          <div className="mb-6 overflow-hidden rounded-lg bg-black">
             {/* The reader div is where the Html5QrcodeScanner will render the camera feed */}
             <div id="reader" className="w-full"></div>
             <p className="text-white text-xs py-2">Point camera at barcode</p>
          </div>
        )}

        {/* Manual Input Fallback */}
        <form onSubmit={handleManualScan} className="relative mt-4">
          <div className="relative">
            <input
                type="text"
                value={scannedId}
                onChange={(e) => setScannedId(e.target.value)}
                placeholder="Scan Barcode or Type Order #"
                className="w-full pl-12 pr-4 py-4 text-lg border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:ring-4 focus:ring-blue-50 transition-all outline-none"
                autoFocus={!showCamera}
            />
            <Search className="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400" />
          </div>
          <button 
            type="submit"
            className="mt-4 w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-xl transition-colors"
          >
            Find Order
          </button>
        </form>
      </div>

      {selectedOrder && (
        <div className="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden mt-8">
          <div className="bg-gray-50 p-4 border-b flex justify-between items-center">
            <h3 className="font-bold text-gray-700">Order Found</h3>
            <button onClick={() => setSelectedOrder(null)} className="text-gray-400 hover:text-gray-600">
              <X size={20} />
            </button>
          </div>
          <div className="p-6">
            {renderOrderDetails(selectedOrder)}
          </div>
        </div>
      )}
    </div>
  );

  // Split details rendering to share between Modal and Scanner view
  const renderOrderDetails = (order) => (
    <div className="space-y-6">
      <div className="flex justify-between items-start">
         <h2 className="text-2xl font-bold text-gray-900">
            {isEditing ? 'Edit Order' : `Order #${order.designNumber}`}
         </h2>
         {!isEditing ? (
            <button 
              onClick={startEditing}
              className="flex items-center gap-2 text-blue-600 bg-blue-50 hover:bg-blue-100 px-3 py-1.5 rounded-lg text-sm font-medium transition-colors"
            >
              <Edit2 size={16} /> Edit Details
            </button>
         ) : (
            <div className="flex gap-2">
               <button 
                  onClick={() => setIsEditing(false)}
                  className="text-gray-600 bg-gray-100 hover:bg-gray-200 px-3 py-1.5 rounded-lg text-sm font-medium"
                >
                  Cancel
                </button>
                <button 
                  onClick={saveOrderEdits}
                  className="flex items-center gap-2 text-white bg-green-600 hover:bg-green-700 px-3 py-1.5 rounded-lg text-sm font-medium"
                >
                  <Save size={16} /> Save Changes
                </button>
            </div>
         )}
      </div>

      <div className="flex flex-col md:flex-row gap-6">
        {/* Left Column: Image & Barcode (Hidden while editing usually, but kept for context) */}
        <div className={`md:w-1/3 flex-shrink-0 flex flex-col gap-4 print-container ${isEditing ? 'hidden md:flex' : ''}`}>
             <div className="aspect-square bg-gray-100 rounded-lg overflow-hidden border">
               {order.photo ? (
                 <img src={order.photo} alt="Design" className="w-full h-full object-cover" />
               ) : (
                 <div className="w-full h-full flex items-center justify-center text-gray-400">
                   <ImageIcon size={48} />
                 </div>
               )}
             </div>
             <div className="bg-white border p-4 rounded-lg flex flex-col items-center justify-center">
                <Barcode value={order.designNumber} />
                <p className="text-[10px] text-gray-500 mt-1 uppercase tracking-wider">{order.designNumber}</p>
             </div>
             <button 
              onClick={() => window.print()}
              className="flex items-center justify-center gap-2 w-full py-2 border border-gray-300 rounded hover:bg-gray-50 text-sm font-medium print:hidden"
             >
               <Printer size={16} /> Print Tag
             </button>
          </div>

        {/* Right Column: Details or Edit Form */}
        <div className="flex-1 space-y-6">
          {isEditing ? (
            <div className="grid grid-cols-1 md:grid-cols-2 gap-4 animate-in fade-in">
                <div className="col-span-2">
                   <label className="text-xs font-bold text-gray-500 uppercase">Customer Name</label>
                   <input name="customerName" value={editFormData.customerName || ''} onChange={handleEditChange} className="w-full border p-2 rounded mt-1" />
                </div>
                <div className="col-span-2">
                   <label className="text-xs font-bold text-gray-500 uppercase">Phone</label>
                   <input name="customerPhone" value={editFormData.customerPhone || ''} onChange={handleEditChange} className="w-full border p-2 rounded mt-1" />
                </div>
                <div>
                   <label className="text-xs font-bold text-gray-500 uppercase">Trial Date</label>
                   <input type="date" name="trialDate" value={editFormData.trialDate || ''} onChange={handleEditChange} className="w-full border p-2 rounded mt-1" />
                </div>
                <div>
                   <label className="text-xs font-bold text-gray-500 uppercase">Delivery Date</label>
                   <input type="date" name="deliveryDate" value={editFormData.deliveryDate || ''} onChange={handleEditChange} className="w-full border p-2 rounded mt-1" />
                </div>
                <div>
                   <label className="text-xs font-bold text-gray-500 uppercase">Total Amount</label>
                   <input type="number" name="totalAmount" value={editFormData.totalAmount || ''} onChange={handleEditChange} className="w-full border p-2 rounded mt-1" />
                </div>
                <div>
                   <label className="text-xs font-bold text-gray-500 uppercase">Amount Received</label>
                   <input type="number" name="amountReceived" value={editFormData.amountReceived || ''} onChange={handleEditChange} className="w-full border p-2 rounded mt-1" />
                </div>
                <div className="col-span-2">
                   <label className="text-xs font-bold text-gray-500 uppercase">Remarks</label>
                   <textarea name="notes" value={editFormData.notes || ''} onChange={handleEditChange} className="w-full border p-2 rounded mt-1 h-24" />
                </div>
            </div>
          ) : (
            <>
              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="text-xs font-semibold text-gray-500 uppercase">Customer</label>
                  <p className="font-medium text-lg">{order.customerName}</p>
                  <p className="text-sm text-gray-600">{order.customerPhone}</p>
                </div>
                <div className="text-right">
                  <label className="text-xs font-semibold text-gray-500 uppercase">Current Status</label>
                  <div className={`mt-1 inline-block px-3 py-1 rounded-full text-sm font-bold border ${STAGE_COLORS[order.status]}`}>
                    {order.status}
                  </div>
                </div>
              </div>

              <div className="grid grid-cols-2 gap-4 border-t border-b py-4">
                 <div>
                   <label className="text-xs font-semibold text-gray-500 uppercase">Trial Date</label>
                   <p className="font-medium">{order.trialDate || 'N/A'}</p>
                 </div>
                 <div>
                   <label className="text-xs font-semibold text-gray-500 uppercase">Delivery Date</label>
                   <p className="font-medium">{order.deliveryDate || 'N/A'}</p>
                 </div>
                 <div>
                   <label className="text-xs font-semibold text-gray-500 uppercase">Total Amount</label>
                   <p className="font-medium">${Number(order.totalAmount || 0).toFixed(2)}</p>
                 </div>
                 <div>
                   <label className="text-xs font-semibold text-gray-500 uppercase">Balance Due</label>
                   <p className={`font-medium ${(Number(order.totalAmount || 0) - Number(order.amountReceived || 0)) > 0 ? 'text-red-600' : 'text-green-600'}`}>
                     ${(Number(order.totalAmount || 0) - Number(order.amountReceived || 0)).toFixed(2)}
                   </p>
                 </div>
              </div>

              {/* Remarks Section */}
              {order.notes && (
                <div className="bg-yellow-50 p-3 rounded-lg border border-yellow-100">
                   <label className="text-xs font-bold text-yellow-700 uppercase flex items-center gap-1 mb-1">
                     <FileText size={12} /> Remarks
                   </label>
                   <p className="text-sm text-gray-700 whitespace-pre-wrap">{order.notes}</p>
                </div>
              )}

              <div>
                <label className="text-xs font-semibold text-gray-500 uppercase mb-2 block">Update Status</label>
                <div className="grid grid-cols-2 sm:grid-cols-3 gap-2">
                  {STAGES.map(stage => (
                    <button
                      key={stage}
                      onClick={() => updateStatus(order.id, stage)}
                      className={`px-2 py-2 text-xs rounded border transition-colors ${
                        order.status === stage 
                          ? 'bg-blue-600 text-white border-blue-600'
                          : 'hover:bg-gray-50'
                      }`}
                    >
                      {stage}
                    </button>
                  ))}
                </div>
              </div>
            </>
          )}
        </div>
      </div>
    </div>
  );

  return (
    <div className="min-h-screen bg-gray-50 text-gray-900 font-sans">
      {/* Top Navigation */}
      <header className="bg-white border-b sticky top-0 z-40">
        <div className="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
          <div className="flex items-center gap-2">
            <div className="bg-blue-600 text-white p-2 rounded-lg">
              <Shirt size={24} />
            </div>
            <h1 className="text-xl font-bold tracking-tight hidden md:block">Anadhya Flow</h1>
          </div>
          
          <nav className="flex items-center gap-1 md:gap-4 bg-gray-100 p-1 rounded-lg">
            <button 
              onClick={() => { setView('dashboard'); setSelectedOrder(null); setIsEditing(false); }}
              className={`flex items-center gap-2 px-4 py-2 rounded-md text-sm font-medium transition-all ${view === 'dashboard' ? 'bg-white shadow text-blue-600' : 'text-gray-600 hover:text-gray-900'}`}
            >
              <LayoutDashboard size={18} />
              <span className="hidden sm:inline">Dashboard</span>
            </button>
            <button 
              onClick={() => { setView('orders'); setSelectedOrder(null); setIsEditing(false); }}
              className={`flex items-center gap-2 px-4 py-2 rounded-md text-sm font-medium transition-all ${view === 'orders' ? 'bg-white shadow text-blue-600' : 'text-gray-600 hover:text-gray-900'}`}
            >
              <Package size={18} />
              <span className="hidden sm:inline">Orders</span>
            </button>
            <button 
              onClick={() => { setView('scan'); setSelectedOrder(null); setIsEditing(false); }}
              className={`flex items-center gap-2 px-4 py-2 rounded-md text-sm font-medium transition-all ${view === 'scan' ? 'bg-white shadow text-blue-600' : 'text-gray-600 hover:text-gray-900'}`}
            >
              <ScanBarcode size={18} />
              <span className="hidden sm:inline">Scanner</span>
            </button>
          </nav>

          <button 
            onClick={() => {
              setIsModalOpen(true);
              setIsEditing(false);
            }}
            className="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 shadow-sm transition-colors"
          >
            <Plus size={18} />
            <span className="hidden md:inline">New Order</span>
          </button>
        </div>
      </header>

      {/* Main Content */}
      <main className="max-w-7xl mx-auto px-4 py-8">
        {!isAuthReady || loading ? (
          <div className="flex flex-col justify-center items-center h-64 text-gray-500">
            {isAuthReady && <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mb-4"></div>}
            <p className="font-medium">{db ? 'Loading order data...' : 'Awaiting Firebase Initialization...'}</p>
            {!db && <p className="text-sm text-red-500 mt-2">Error: Database connection failed. Check console for details.</p>}
          </div>
        ) : (
          <>
            {view === 'dashboard' && (
              <div className="space-y-8">
                <div>
                   <h2 className="text-2xl font-bold mb-4">Stage Overview</h2>
                   {renderDashboard()}
                </div>
                <div>
                  <div className="flex justify-between items-center mb-4">
                    <h2 className="text-2xl font-bold">Recent Orders</h2>
                    <button onClick={() => setView('orders')} className="text-blue-600 font-medium hover:underline text-sm flex items-center gap-1">
                      View All <ArrowRight size={16} />
                    </button>
                  </div>
                  {renderOrderList()}
                </div>
              </div>
            )}

            {view === 'orders' && (
              <div>
                <h2 className="text-2xl font-bold mb-6">All Orders</h2>
                {renderOrderList()}
              </div>
            )}

            {view === 'scan' && renderScanner()}
          </>
        )}
      </main>

      {/* New Order Modal */}
      <Modal 
        isOpen={isModalOpen} 
        onClose={() => setIsModalOpen(false)}
        title="Create New Order"
      >
        <form onSubmit={handleSubmitOrder} className="space-y-6">
          <div className="bg-blue-50 p-4 rounded-lg text-blue-800 text-sm mb-4 flex items-start gap-2">
             <Package size={16} className="mt-0.5" />
             <span>Order Number will be generated automatically upon saving.</span>
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div className="col-span-1 md:col-span-2 space-y-4">
               <div className="flex items-center gap-4">
                 <div className="w-24 h-24 bg-gray-100 rounded-lg border-2 border-dashed border-gray-300 flex items-center justify-center relative overflow-hidden group">
                   {formData.photo ? (
                     <img src={formData.photo} alt="Preview" className="w-full h-full object-cover" />
                   ) : (
                     <ImageIcon className="text-gray-400" />
                   )}
                   <input 
                    type="file" 
                    accept="image/*"
                    onChange={handleFileChange}
                    className="absolute inset-0 opacity-0 cursor-pointer" 
                   />
                 </div>
                 <div className="flex-1">
                   <p className="text-sm font-medium text-gray-700">Design Photo</p>
                   <p className="text-xs text-gray-500">Click to upload. Max 500KB.</p>
                 </div>
               </div>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Customer Name</label>
              <div className="relative">
                <User className="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" size={18} />
                <input required name="customerName" value={formData.customerName} onChange={handleInputChange} className="pl-10 w-full rounded-lg border-gray-300 border p-2.5 focus:ring-2 focus:ring-blue-500 outline-none" placeholder="Jane Doe" />
              </div>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
              <div className="relative">
                <Phone className="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" size={18} />
                <input required name="customerPhone" value={formData.customerPhone} onChange={handleInputChange} className="pl-10 w-full rounded-lg border-gray-300 border p-2.5 focus:ring-2 focus:ring-blue-500 outline-none" placeholder="+1 234 567 890" />
              </div>
            </div>

            <div>
               <label className="block text-sm font-medium text-gray-700 mb-1">Trial Date</label>
               <input required type="date" name="trialDate" value={formData.trialDate} onChange={handleInputChange} className="w-full rounded-lg border-gray-300 border p-2.5 focus:ring-2 focus:ring-blue-500 outline-none" />
            </div>

            <div>
               <label className="block text-sm font-medium text-gray-700 mb-1">Delivery Date</label>
               <input required type="date" name="deliveryDate" value={formData.deliveryDate} onChange={handleInputChange} className="w-full rounded-lg border-gray-300 border p-2.5 focus:ring-2 focus:ring-blue-500 outline-none" />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Total Amount</label>
              <div className="relative">
                <DollarSign className="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" size={18} />
                <input required type="number" name="totalAmount" value={formData.totalAmount} onChange={handleInputChange} className="pl-10 w-full rounded-lg border-gray-300 border p-2.5 focus:ring-2 focus:ring-blue-500 outline-none" placeholder="0.00" />
              </div>
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Amount Received</label>
              <div className="relative">
                <DollarSign className="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400" size={18} />
                <input required type="number" name="amountReceived" value={formData.amountReceived} onChange={handleInputChange} className="pl-10 w-full rounded-lg border-gray-300 border p-2.5 focus:ring-2 focus:ring-blue-500 outline-none" placeholder="0.00" />
              </div>
            </div>

            <div className="col-span-1 md:col-span-2">
              <label className="block text-sm font-medium text-gray-700 mb-1">Remarks / Notes</label>
              <div className="relative">
                <FileText className="absolute left-3 top-3 text-gray-400" size={18} />
                <textarea name="notes" value={formData.notes} onChange={handleInputChange} className="pl-10 w-full rounded-lg border-gray-300 border p-2.5 focus:ring-2 focus:ring-blue-500 outline-none min-h-[80px]" placeholder="Add any special instructions here..." />
              </div>
            </div>
          </div>
          
          <button type="submit" className="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg transition-colors flex justify-center items-center gap-2">
            <Save size={20} /> Create Order
          </button>
        </form>
      </Modal>

      {/* Order Details View Modal (Reusing component for details) */}
      {selectedOrder && view !== 'scan' && (
        <Modal 
          isOpen={true} 
          onClose={() => {
            setSelectedOrder(null);
            setIsEditing(false);
          }} 
          title={`Order Details`}
        >
          {renderOrderDetails(selectedOrder)}
        </Modal>
      )}
    </div>
  );
}

// Export the function for use in the embeddable HTML file
export default OrderTrackerApp;
